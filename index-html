        function parseStringToArray(str) { return str ? str.split(',').map(item => item.trim()).filter(item => item) : []; }
        function arrayToString(arr) { return arr ? arr.join(', ') : ''; }
        function parseMedicationString(medStrInput) { /* ... same as before ... */ }
